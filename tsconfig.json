{
  "compilerOptions": {
    "lib": ["DOM", "ES7"],
    "allowSyntheticDefaultImports": true,
    "baseUrl": "src",
    "declaration": true,
    "module": "CommonJS",
    "outDir": "dist",
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "strictNullChecks": true,
    "target": "es6"
  },
  "exclude": ["node_modules"],
  "include": ["src"]
}
